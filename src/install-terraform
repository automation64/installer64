#
# Imports
#

# BashLib64 location
declare INST64_BASHLIB64="${INST64_BASHLIB64:-/opt/bl64}"
[[ ! -d "$INST64_BASHLIB64" && -d "${HOME}/at64" ]] && INST64_BASHLIB64="${HOME}/at64"
# shellcheck source-path=lib/bl64 disable=SC2015
source "${INST64_BASHLIB64}/bashlib64-module-arc.bash" &&
source "${INST64_BASHLIB64}/bashlib64-module-rnd.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-iam.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-cryp.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-xsv.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-api.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-vcs.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-bsh.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-rxtx.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-txt.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-fmt.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-fs.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-pkg.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-core.bash" ||
  { echo "Fatal: unable to load BashLib64 libraries (${INST64_BASHLIB64})." && exit 1; }
# shellcheck source-path=src disable=SC2015
source "${BL64_SCRIPT_PATH}/lib-bl64" ||
  { echo 'Fatal: unable to load Installer64 libraries.' && exit 1; }

#
# Globals
#

# Installation method
declare INST64_TERRAFORM_METHOD="${INST64_TERRAFORM_METHOD:-AUTO}"
# Installation destination
declare INST64_TERRAFORM_TARGET="${INST64_TERRAFORM_TARGET:-}"
# Hardware architecture
declare INST64_TERRAFORM_PLATFORM="${INST64_TERRAFORM_PLATFORM:-}"
# Application version
declare INST64_TERRAFORM_VERSION="${INST64_TERRAFORM_VERSION:-latest}"
# Enable development packages?
declare INST64_TERRAFORM_DEVELOPMENT="${INST64_TERRAFORM_DEVELOPMENT:-NO}"

# App information
INST64_APP_NAME='terraform'
INST64_APP_ID='TERRAFORM'
INST64_APP_FULL_NAME='Terraform - Infrastructure as Code Tool'
INST64_CLI_NAME='terraform'

INST64_OS_REPO_NAME=''
INST64_OS_SOURCE_YUM='https://rpm.releases.hashicorp.com'
INST64_OS_REPOSITORY_KEY_YUM='https://rpm.releases.hashicorp.com/gpg'

INST64_WEB_REPO_URL='https://releases.hashicorp.com'
INST64_WEB_REPO_PATH='terraform'
INST64_GH_REPO_NAME='terraform'
INST64_GH_REPO_OWNER='hashicorp'
INST64_PKG_MAIN_PREFIX='terraform_'
INST64_PKG_MAIN_SUFFIX='.zip'
INST64_CPU_DARWIN_ARM64='darwin_arm64'
INST64_CPU_LINUX_AMD64='linux_amd64'

#
# Functions
#

function inst64_install_binary() {
  bl64_dbg_app_show_function

  inst64_lib_task_download
  inst64_lib_staging_create &&
    inst64_lib_web_get_file &&
    inst64_lib_staging_open_zip ||
    return $?

  inst64_lib_task_deploy
  inst64_lib_target_create &&
    inst64_lib_target_populate ||
    return $?

  inst64_lib_task_cleanup
  inst64_lib_staging_remove
}

function inst64_prepare_repository() {
  bl64_dbg_app_show_function
  local repository_url=''
  local repository_key=''
  local repository_apt_suite=''
  local repository_apt_component=''

  if bl64_os_is_flavor "$BL64_OS_FLAVOR_FEDORA" || bl64_os_is_flavor "$BL64_OS_FLAVOR_REDHAT"; then
    repository_url="${INST64_OS_SOURCE_YUM}/RHEL/\$releasever/\$basearch/stable"
    repository_key="$INST64_OS_REPOSITORY_KEY_YUM"
  fi

  bl64_msg_show_task 'Add external package repository'
  bl64_pkg_repository_add "$INST64_OS_REPO_NAME" \
    "$repository_url" "$repository_key" \
    "$repository_apt_suite" "$repository_apt_component"
}

function inst64_install_native() {
  bl64_dbg_app_show_function
  # shellcheck disable=SC2086
  bl64_pkg_deploy $INST64_PKG_MAIN
}

function inst64_prepare() {
  bl64_dbg_app_show_function
  inst64_lib_step_prepare || return 0
  if [[ "$INST64_TERRAFORM_METHOD" == 'NATIVE' ]]; then
    inst64_prepare_repository
  elif [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    inst64_lib_base_create_path
  fi
}

function inst64_install() {
  bl64_dbg_app_show_function
  inst64_lib_step_install || return 0
  if [[ "$INST64_TERRAFORM_METHOD" == 'NATIVE' ]]; then
    inst64_install_native
  elif [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    inst64_install_binary
  fi
}

function inst64_setup() {
  bl64_dbg_app_show_function
  inst64_lib_step_setup || return 0
  if [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    inst64_lib_task_publish
    inst64_lib_cli_promote
  fi
}

function inst64_verify() {
  bl64_dbg_app_show_function
  inst64_lib_step_verify || return 0
  "${INST64_CLI_PATH}/${INST64_CLI_NAME}" --version || return 0
  if [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    inst64_lib_app_register_version
  fi
}

function inst64_select_method() {
  bl64_dbg_app_show_function
  inst64_lib_app_check_method \
    'AUTO' \
    'BINARY' \
    'NATIVE' ||
    return $?
  if [[ "$INST64_TERRAFORM_METHOD" == 'AUTO' ]]; then
    INST64_TERRAFORM_METHOD='BINARY'
  fi
}

function inst64_select_platform() {
  bl64_dbg_app_show_function
  if [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    if [[ -z "$INST64_TERRAFORM_PLATFORM" ]]; then
      if [[ "$BL64_OS_TYPE" == "$BL64_OS_TYPE_MACOS" && "$BL64_OS_MACHINE" == "$BL64_OS_MACHINE_ARM64" ]]; then
        INST64_TERRAFORM_PLATFORM="$INST64_CPU_DARWIN_ARM64"
      elif [[ "$BL64_OS_TYPE" == "$BL64_OS_TYPE_LINUX" && "$BL64_OS_MACHINE" == "$BL64_OS_MACHINE_AMD64" ]]; then
        INST64_TERRAFORM_PLATFORM="$INST64_CPU_LINUX_AMD64"
      fi
    fi
    inst64_lib_platform_check_cpu
  fi
}

function inst64_select_packages() {
  bl64_dbg_app_show_function
  if [[ "$INST64_TERRAFORM_METHOD" == 'NATIVE' ]]; then
      bl64_lib_flag_is_enabled "$INST64_TERRAFORM_DEVELOPMENT" &&
        INST64_PKG_DEV=''
      INST64_PKG_MAIN='terraform'
    INST64_PKG_MAIN+=" ${INST64_PKG_DEV}"
  elif [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    if [[ "$INST64_TERRAFORM_VERSION" == 'latest' ]]; then
      INST64_TERRAFORM_VERSION="$(bl64_vcs_github_release_get_latest "$INST64_GH_REPO_OWNER" "$INST64_GH_REPO_NAME")" ||
        return $?
    fi
    INST64_PKG_MAIN="${INST64_PKG_MAIN_PREFIX}${INST64_TERRAFORM_VERSION#v}_${INST64_TERRAFORM_PLATFORM}${INST64_PKG_MAIN_SUFFIX}"
    INST64_WEB_REPO_PATH+="/${INST64_TERRAFORM_VERSION#v}"
  fi
  inst64_lib_package_check_definition
}

function inst64_initialize() {
  bl64_dbg_app_show_function
  inst64_lib_base_initialize &&
    inst64_select_method ||
    return $?

  if [[ "$INST64_TERRAFORM_METHOD" == 'NATIVE' ]]; then
    bl64_check_privilege_root &&
      bl64_os_check_flavor \
        "$BL64_OS_FLAVOR_FEDORA" \
        "$BL64_OS_FLAVOR_REDHAT" &&
      bl64_cryp_setup &&
      bl64_pkg_setup ||
      return $?
  elif [[ "$INST64_TERRAFORM_METHOD" == 'BINARY' ]]; then
    if bl64_lib_flag_is_enabled "$INST64_SYSTEM_WIDE"; then
      bl64_check_privilege_root ||
        return $?
    fi
    bl64_arc_setup ||
      return $?
  fi

  inst64_select_platform &&
    inst64_select_packages &&
    inst64_lib_cli_set_path ||
    return $?

  inst64_lib_app_check_installed && return 0
  inst64_lib_message_show_parameters
}

#
# Main
#

bl64_lib_script_version_set '1.0.0'
bl64_msg_all_enable_verbose
bl64_msg_show_batch_start "$BL64_SCRIPT_ID"

[[ -n "$INST64_DEBUG" ]] && bl64_dbg_all_enable
inst64_initialize &&
  inst64_prepare &&
  inst64_install &&
  inst64_setup &&
  inst64_verify
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
