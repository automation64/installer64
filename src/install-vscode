#
# Imports
#

# BashLib64 location
declare INST64_BASHLIB64="${INST64_BASHLIB64:-/opt/bl64}"
[[ ! -d "$INST64_BASHLIB64" && -d "${HOME}/at64" ]] && INST64_BASHLIB64="${HOME}/at64"
# shellcheck disable=SC2015
source "${INST64_BASHLIB64}/bashlib64-module-arc.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-rnd.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-iam.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-cryp.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-xsv.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-api.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-vcs.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-bsh.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-rxtx.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-txt.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-fmt.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-fs.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-module-pkg.bash" &&
  source "${INST64_BASHLIB64}/bashlib64-core.bash" ||
  { echo "Fatal: unable to load BashLib64 libraries (${INST64_BASHLIB64})." && exit 1; }
source "${BL64_SCRIPT_PATH}/lib-bl64" ||
  { echo 'Fatal: unable to load Installer64 libraries.' && exit 1; }

#
# Globals
#

# Installation method
declare INST64_VSCODE_METHOD="${INST64_VSCODE_METHOD:-AUTO}"
# Installation destination
declare INST64_VSCODE_TARGET="${INST64_VSCODE_TARGET:-}"
# Hardware architecture
declare INST64_VSCODE_PLATFORM="${INST64_VSCODE_PLATFORM:-}"
# Application version
declare INST64_VSCODE_VERSION="${INST64_VSCODE_VERSION:-latest}"

# App information
INST64_APP_NAME='vscode'
INST64_APP_ID='VSCODE'
INST64_APP_FULL_NAME='Visual Studio Code'
INST64_CLI_NAME='code'
INST64_CLI_SUBPATH='bin'
INST64_WEB_REPO_URL='https://code.visualstudio.com'
INST64_WEB_REPO_PATH='sha'
INST64_PKG_MAIN_PREFIX='download?build=stable&os='
INST64_CPU_LINUX_AMD64='x64'
INST64_CPU_LINUX_ARM64='arm64'

#
# Functions
#

function inst64_install_package() {
  bl64_dbg_app_show_function
  inst64_lib_task_download
  inst64_lib_staging_create &&
    inst64_lib_web_get_file ||
    return $?

  inst64_lib_task_deploy
  inst64_lib_pkg_install_file ||
    return $?

  inst64_lib_task_cleanup
  inst64_lib_staging_remove
}

function inst64_install_binary() {
  bl64_dbg_app_show_function

  INST64_WORK_PATH_SOURCE="VSCode-${INST64_PKG_MAIN_SUFFIX}"
  inst64_lib_task_download
  inst64_lib_staging_create &&
    inst64_lib_web_get_file &&
    inst64_lib_staging_open_tar ||
    return $?

  inst64_lib_task_deploy
  inst64_lib_target_create &&
    inst64_lib_target_merge ||
    return $?

  inst64_lib_task_cleanup
  inst64_lib_staging_remove
}

function my_prepare() {
  bl64_dbg_app_show_function
  inst64_lib_step_prepare || return 0
  if [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_BINARY" ]]; then
    inst64_lib_base_create_path
  fi
}

function my_install() {
  bl64_dbg_app_show_function
  inst64_lib_step_install || return 0
  if [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_PACKAGE" ]]; then
    inst64_install_package
  elif [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_BINARY" ]]; then
    inst64_install_binary
  fi
}

function my_setup() {
  bl64_dbg_app_show_function
  inst64_lib_step_setup || return 0
  if [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_BINARY" ]]; then
    INST64_CLI_NORMALIZE='NO'
    bl64_dbg_app_show_comments 'required for portable mode on linux'
    bl64_fs_run_chown root "$INST64_VSCODE_TARGET"/chrome-sandbox &&
      bl64_fs_run_chmod 4755 "$INST64_VSCODE_TARGET"/chrome-sandbox &&
      inst64_lib_task_publish
    inst64_lib_cli_promote
  fi
}

function my_verify() {
  bl64_dbg_app_show_function
  inst64_lib_step_verify || return 0
  [[ -x "${INST64_CLI_PATH}/${INST64_CLI_NAME}" ]]
}

function my_select_method() {
  bl64_dbg_app_show_function
  inst64_lib_app_check_method \
    "$INST64_METHOD_AUTO" \
    "$INST64_METHOD_BINARY" \
    "$INST64_METHOD_PACKAGE" ||
    return $?
  if [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_AUTO" ]]; then
    INST64_VSCODE_METHOD="$INST64_METHOD_PACKAGE"
  fi
}

function my_select_platform() {
  bl64_dbg_app_show_function
  if [[ "$INST64_VSCODE_METHOD" =~ "$INST64_METHOD_PACKAGE"|"$INST64_METHOD_BINARY" ]]; then
    if [[ "$BL64_OS_TYPE" == "$BL64_OS_TYPE_LINUX" && "$BL64_OS_MACHINE" == "$BL64_OS_MACHINE_AMD64" ]]; then
      INST64_VSCODE_PLATFORM="$INST64_CPU_LINUX_AMD64"
    elif [[ "$BL64_OS_TYPE" == "$BL64_OS_TYPE_LINUX" && "$BL64_OS_MACHINE" == "$BL64_OS_MACHINE_ARM64" ]]; then
      INST64_VSCODE_PLATFORM="$INST64_CPU_LINUX_ARM6464"
    fi
    inst64_lib_platform_check_cpu
  fi
}

function my_select_packages() {
  bl64_dbg_app_show_function
  if [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_PACKAGE" ]]; then
    # shellcheck disable=SC2249
    case "$BL64_OS_FLAVOR" in
      "$BL64_OS_FLAVOR_FEDORA" | "$BL64_OS_FLAVOR_REDHAT")
        INST64_PKG_MAIN_SUFFIX="linux-rpm-${INST64_VSCODE_PLATFORM}"
        INST64_PKG_MAIN="${INST64_CLI_NAME}.rpm"
        ;;
      "$BL64_OS_FLAVOR_DEBIAN")
        INST64_PKG_MAIN_SUFFIX="linux-deb-${INST64_VSCODE_PLATFORM}"
        INST64_PKG_MAIN="${INST64_CLI_NAME}.deb"
        ;;
    esac
  elif [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_BINARY" ]]; then
    INST64_PKG_MAIN_SUFFIX="linux-${INST64_VSCODE_PLATFORM}"
    INST64_PKG_MAIN="${INST64_CLI_NAME}-stable"
  fi
  INST64_WEB_FILE_SOURCE="${INST64_PKG_MAIN_PREFIX}${INST64_PKG_MAIN_SUFFIX}"
  inst64_lib_package_check_definition
}

function my_initialize() {
  bl64_dbg_app_show_function
  my_select_method &&
    inst64_lib_base_initialize ||
    return $?

  if [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_PACKAGE" ]]; then
    bl64_os_check_flavor \
      "$BL64_OS_FLAVOR_DEBIAN" \
      "$BL64_OS_FLAVOR_FEDORA" \
      "$BL64_OS_FLAVOR_REDHAT" ||
      return $?
  elif [[ "$INST64_VSCODE_METHOD" == "$INST64_METHOD_BINARY" ]]; then
    bl64_os_check_flavor \
      "$BL64_OS_FLAVOR_ARCH" \
      "$BL64_OS_FLAVOR_DEBIAN" \
      "$BL64_OS_FLAVOR_FEDORA" \
      "$BL64_OS_FLAVOR_REDHAT" ||
      return $?
  fi

  my_select_platform &&
    my_select_packages &&
    inst64_lib_cli_set_path ||
    return $?

  inst64_lib_app_check_installed && return 0
  inst64_lib_message_show_parameters
}

#
# Main
#

bl64_lib_script_version_set '2.0.0'
inst64_lib_base_set_verbosity
bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_initialize &&
  my_prepare &&
  my_install &&
  my_setup &&
  my_verify
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
