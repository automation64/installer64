MY_MODE="${1:-SYSTEM}"

my_prepare() {
  TARGET_RELEASE="$(curl -s "https://api.github.com/repos/automation64/my_installer64/releases/latest" | grep '"tag_name":' | cut -d '"' -f 4)" &&
    [ -n "$TARGET_RELEASE" ] &&
    curl -LO "https://github.com/automation64/my_installer64/releases/download/${TARGET_RELEASE}/my_install-my_installer64" &&
    chmod 755 my_install-my_installer64
}

my_install() {
  if [ "$MY_MODE" = 'SYSTEM' ]; then
    INST64_SYSTEM_WIDE='YES'
    export INST64_SYSTEM_WIDE
    if [ "$(id -u)" = "0" ]; then
      ./my_install-my_installer64
    else
      sudo -E ./my_install-my_installer64
    fi
  else
    INST64_SYSTEM_WIDE='NO'
    export INST64_SYSTEM_WIDE
    ./my_install-my_installer64
  fi || return $?
  rm -f my_install-my_installer64
  return 0
}

my_prepare &&
  my_install
