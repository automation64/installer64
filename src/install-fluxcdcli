#
# Imports
#

# BashLib64 location
export INST64_BASHLIB64="${INST64_BASHLIB64:-/opt/bl64}"
# Enable debugging? Set to YES to enable
export INST64_DEBUG="${INST64_DEBUG:-}"
# Installer64 location
export INST64_INSTALLER_ROOT="${INST64_INSTALLER_ROOT:-/opt/installer64}"
# Base path for local applications
export INST64_LOCAL_ROOT="${INST64_LOCAL_ROOT:-/usr/local}"
# Local applications binaries location
export INST64_LOCAL_BIN="${INST64_LOCAL_BIN:-${INST64_LOCAL_ROOT}/bin}"
# Base path for 3rd party applications
export INST64_OPT_ROOT="${INST64_OPT_ROOT:-/opt}"
# Location for temporary files
export INST64_TMP="${INST64_TMP:-/tmp}"

# shellcheck source=lib/bl64/bashlib64.bash
source "${INST64_BASHLIB64}/bashlib64.bash" ||
  { echo 'Error: BashLib64 not found. Please run the install-bashlib64 script and retry.' && exit 1; }

#
# Globals
#

export INST64_FLUXCDCLI_PLATFORM="${INST64_FLUXCDCLI_PLATFORM:-linux_amd64}"
export INST64_FLUXCDCLI_TARGET="${INST64_FLUXCDCLI_TARGET:-${INST64_OPT_ROOT}/fluxcdcli}"
export INST64_FLUXCDCLI_VERSION="${INST64_FLUXCDCLI_VERSION:-latest}"
# Installation method
export INST64_FLUXCDCLI_METHOD="${INST64_FLUXCDCLI_METHOD:-BINARY}"

export INST64_FLUXCDCLI_REPO_NAME='flux2'
export INST64_FLUXCDCLI_REPO_OWNER='fluxcd'

#
# Functions
#

function inst64_fluxcdcli_install_binary_release() {
  bl64_dbg_app_show_function
  local package_prefix='flux_'
  local package_sufix='.tar.gz'
  local package_name=''
  local work_path=''
  local app_target_mode='0755'
  local app_target_owner='root'
  local app_cli_mode='0755'
  local app_cli='flux'

  bl64_msg_show_task 'download application'
  work_path="$(bl64_fs_create_tmpdir)" || return $?
  if [[ "$INST64_FLUXCDCLI_VERSION" == 'latest' ]]; then
    INST64_FLUXCDCLI_VERSION="$(bl64_vcs_github_release_get_latest "$INST64_FLUXCDCLI_REPO_OWNER" "$INST64_FLUXCDCLI_REPO_NAME")" ||
      return $?
  fi
  package_name="${package_prefix}${INST64_FLUXCDCLI_VERSION:1}_${INST64_FLUXCDCLI_PLATFORM}${package_sufix}"

  bl64_rxtx_github_get_asset "$INST64_FLUXCDCLI_REPO_OWNER" "$INST64_FLUXCDCLI_REPO_NAME" "$INST64_FLUXCDCLI_VERSION" "$package_name" "${work_path}/${package_name}" &&
    bl64_arc_open_tar "${work_path}/${package_name}" "${work_path}" ||
    return $?

  bl64_msg_show_task 'deploy application'
  bl64_fs_dir_create "$app_target_mode" "$app_target_owner" "$app_target_owner" "$INST64_FLUXCDCLI_TARGET" &&
    bl64_fs_path_copy "$app_cli_mode" "$BL64_VAR_DEFAULT" "$app_target_owner" "$app_target_owner" "$INST64_FLUXCDCLI_TARGET" "${work_path}/${app_cli}" ||
    return $?

  bl64_msg_show_task "publish application to searchable path (${INST64_LOCAL_BIN})"
  # shellcheck disable=SC2086
  bl64_fs_symlink_create "${INST64_FLUXCDCLI_TARGET}/${app_cli}" "${INST64_LOCAL_BIN}/${app_cli}" "$BL64_VAR_ON" ||
    return $?

  bl64_msg_show_task 'cleanup temporary files'
  bl64_fs_rm_tmpdir "$work_path"
  return 0
}

#######################################
# Install application packages
#
# Arguments:
#   None. Parameters are imported from Globals
# Outputs:
#   Package installer progress and errors
# Returns:
#   0: package installed ok
#   >0: unable to install package
#######################################
function inst64_fluxcdcli_install() {
  bl64_dbg_app_show_function
  if [[ "$INST64_FLUXCDCLI_METHOD" == 'BINARY' ]]; then
    inst64_fluxcdcli_install_binary_release
  fi
}

#######################################
# Initialize environment
#
# Arguments:
#   None
# Outputs:
#   Initializacion progress messages
# Returns:
#   0: initialization ok
#   >: failed to initialize
#######################################
function inst64_fluxcdcli_initialize() {
  bl64_dbg_app_show_function
  bl64_os_check_compatibility \
    "${BL64_OS_UB}-22" \
    "${BL64_OS_OL}-9" &&
    bl64_fmt_check_value_in_list 'invalid installation method for the parameter INST64_FLUXCDCLI_METHOD' \
      "$INST64_FLUXCDCLI_METHOD" \
      'BINARY' &&
    bl64_arc_setup &&
    bl64_check_privilege_root
}

#
# Main
#

declare inst64_fluxcdcli_installer_description='Install application: FluxCD CLI'

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start "$inst64_fluxcdcli_installer_description"

[[ -n "$INST64_DEBUG" ]] && bl64_dbg_all_enable
inst64_fluxcdcli_initialize &&
  inst64_fluxcdcli_install
bl64_msg_show_batch_finish $? "$inst64_fluxcdcli_installer_description"
