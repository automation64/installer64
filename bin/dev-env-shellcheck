#
# Module variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / ShellCheck / Module environment definition version
  export DEV_ENV_SHELLCHECK_ID='shellcheck'
  export DEV_ENV_SHELLCHECK_VERSION='2.1.0'
  # Env / ShellCheck / Log path
  export DEV_ENV_SHELLCHECK_PATH_LOGS="${DEV_PATH_LOGS}/${DEV_ENV_SHELLCHECK_ID}"

  # Lib / ShellCheck / Installer
  export DEV_LIB_SHELLCHECK_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-shellcheck"
  # Lib / ShellCheck / Skip installation?
  export DEV_LIB_SHELLCHECK_SKIP='YES'
  # Lib / ShellCheck / Target
  export DEV_LIB_SHELLCHECK_TARGET="${DEV_PATH_LIB}/${DEV_ENV_SHELLCHECK_ID}"
  # Lib / ShellCheck / Configuration
  export DEV_LIB_SHELLCHECK_CFG="${DEV_PATH_ROOT}/.shellcheckrc"

  # Lint / ShellCheck / Format
  export DEV_LINT_SHELLCHECK_FORMAT='json'
  # Lint / ShellCheck / Report
  export DEV_LINT_SHELLCHECK_PATH_REPORT="${DEV_ENV_SHELLCHECK_PATH_LOGS}/${DEV_ENV_SHELLCHECK_ID}-lint.${DEV_LINT_SHELLCHECK_FORMAT}"
}

#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # Lint / ShellCheck / Target
  export DEV_LINT_SHELLCHECK_TARGET="${DEV_LINT_SHELLCHECK_TARGET:-${DEV_BASE_SRC}}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / ShellCheck / Command
  export DEV_LIB_SHELLCHECK_BIN="${DEV_LIB_SHELLCHECK_BIN:-}"
  if [[ -z "$DEV_LIB_SHELLCHECK_BIN" ]]; then
    DEV_LIB_SHELLCHECK_BIN="$(dev_bin64_lib_locate 'shellcheck')"
    if [[ -z "$DEV_LIB_SHELLCHECK_BIN" ]]; then
      DEV_LIB_SHELLCHECK_BIN="${DEV_LIB_SHELLCHECK_TARGET}/shellcheck"
      if [[ ! -x "${DEV_LIB_SHELLCHECK_BIN}" ]]; then
        DEV_LIB_SHELLCHECK_SKIP='NO'
      fi
    else
      DEV_LIB_SHELLCHECK_TARGET="$(dev_bin64_lib_basename "$DEV_LIB_SHELLCHECK_BIN")"
    fi
  fi
}
