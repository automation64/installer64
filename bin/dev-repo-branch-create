#!/usr/bin/env bash
#
# Create branch from main
#
# * Template: 1.0.0
#

#
# Imports
#

# shellcheck source=SCRIPTDIR/dev-set
source ./bin/dev-set || exit 1
source "${DEV_CICD_BASHLIB64}/bashlib64-module-os.bash" &&
  source "${DEV_CICD_BASHLIB64}/bashlib64-module-fs.bash" &&
  source "${DEV_CICD_BASHLIB64}/bashlib64-module-txt.bash" &&
  source "${DEV_CICD_BASHLIB64}/bashlib64-module-api.bash" &&
  source "${DEV_CICD_BASHLIB64}/bashlib64-module-vcs.bash" &&
  source "${DEV_CICD_BASHLIB64}/bashlib64-core.bash" ||
  exit 1

export DEV_CICD_DEBUG="${DEV_CICD_DEBUG:-}"

#
# Main
#

declare branch_name="${1:-feature/update}"

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_check_export 'DEV_CICD_BRANCH_MAIN' &&
  bl64_check_parameter 'branch_name' &&
  bl64_vcs_setup ||
  exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'repo-branch-create'

bl64_msg_show_task "switch to main branch"
  bl64_vcs_run_git checkout main &&
  bl64_msg_show_task "pull latest changes from upstream" &&
  bl64_vcs_run_git pull upstream main &&
  bl64_msg_show_task "create branch (${branch_name})" &&
  bl64_vcs_run_git checkout -b "$branch_name"
bl64_msg_show_batch_finish $? 'repo-branch-create'
