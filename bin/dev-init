export DEV_PROFILE
declare MY_PROFILE="${1:-}"

function dev_init_profile() {
  db64_profile_is_set || return 0
  [[ -d "${DEV_PATH_ETC}/${DEV_BASE_PROFILE}/${DEV_PROFILE}" ]] && return 0
  ./bin/dev-profile-create
}

function dev_init_initialize() {
  [[ -n "$MY_PROFILE" ]] && DEV_PROFILE="$MY_PROFILE"
  # shellcheck source=bin/dev-set
  source ./bin/dev-set ||
    { echo 'dev-set:Error: unable to load dev environment' 2>&1 && return 1; }
}

[[ -n "$DEV_CICD_DEBUG" ]] && set -x

dev_init_initialize &&
  dev_init_profile &&
  unset dev_init_initialize &&
  unset dev_init_profile
