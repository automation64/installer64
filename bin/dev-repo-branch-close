#!/usr/bin/env bash
#
# Create branch from main
#
# * Template: 1.0.0
#

#
# Imports
#

# shellcheck source=SCRIPTDIR/dev-set
source ./bin/dev-set || exit 1

# shellcheck source=SCRIPTDIR/../lib/bl64/bashlib64.bash
source "${DEV_CICD_BASHLIB64}/bashlib64.bash" ||
  exit 1

export DEV_CICD_DEBUG="${DEV_CICD_DEBUG:-}"

#
# Main
#

declare branch_name="${1:-feature/update}"

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_check_export 'DEV_CICD_BRANCH_MAIN' &&
  bl64_check_parameter 'branch_name' &&
  bl64_vcs_setup ||
  exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'repo-branch-close'

bl64_ui_ask_confirmation 'The requested action will delete the branch. Please verify that the branch has already been merged to the upstream by entering:' &&
  bl64_msg_show_task "switch to main branch (${DEV_CICD_BRANCH_MAIN})" &&
  bl64_vcs_run_git checkout "$DEV_CICD_BRANCH_MAIN" &&
  bl64_msg_show_task "pull latest changes from upstream (${DEV_CICD_REPO_UPSTREAM_NAME})" &&
  bl64_vcs_run_git pull "$DEV_CICD_REPO_UPSTREAM_NAME" "$DEV_CICD_BRANCH_MAIN" &&
  bl64_msg_show_task "push latest changes to origin (${DEV_CICD_REPO_ORIGIN_NAME})" &&
  bl64_vcs_run_git push "$DEV_CICD_REPO_ORIGIN_NAME" "$DEV_CICD_BRANCH_MAIN" &&
  bl64_msg_show_task "delete local branch (${branch_name})" &&
  bl64_vcs_run_git branch -d "$branch_name"
bl64_msg_show_batch_finish $? 'repo-branch-close'
